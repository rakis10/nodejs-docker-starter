<div id="edit-product" class="bg-white rounded-lg p-6 shadow-md">
  <form hx-put="/products/<%= product.id %>/" hx-target="#products" hx-swap:afterend="">
      <div class="mb-4">
          <label for="edit-name" class="block text-gray-700 font-bold mb-2">Product Name:</label>
          <input type="text" name="name" id="edit-name" value="<%= product.name %>"
                 class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-blue-500 focus:ring-2">
      </div>
      <div class="mb-4">
          <label for="edit-category" class="block text-gray-700 font-bold mb-2">Category:</label>
          <input type="text" name="category" id="edit-category" value="<%= product.category %>"
                 class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-blue-500 focus:ring-2">
      </div>
      <div class="mb-4">
          <label for="edit-status" class="block text-gray-700 font-bold mb-2">Status:</label>
          <input type="text" name="status" id="edit-status" value="<%= product.status %>"
                 class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-blue-500 focus:ring-2">
      </div>
      <div class="mb-4">
          <label for="edit-price" class="block text-gray-700 font-bold mb-2">Price:</label>
          <input type="number" name="price" id="edit-price" step="0.01" value="<%= product.price %>"
                 class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-blue-500 focus:ring-2">
      </div>
      <button type="submit" class="mt-4 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-700">
          Save Changes
      </button>
  </form>
</div>
